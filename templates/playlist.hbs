<table class="playlist-table ptable" style="width: 100%; height: 100%;" cellspacing="0" cellpadding="0">
  <tr>
    <th style="width: 10%;"> </th>
    <th style="width: 70%;"><i class="fa fa-sort"></i> Nom</th>
    <th style="width: 20%;"><i class="fa fa-sort"></i> Date d'ajout</th>
  </tr>
  {{#each files}}
    <tr class="table-item">
      <td class="td-1"><i class="fa fa-youtube-play" style="font-size: 35px;"></i></td>
      <td>{{fileName}}</td>
      <td>{{createDate}}</td>
      <!--
      <td>
        <div class="progress-bar" style="width: 100%;"></div>
        <div class="centered-text progress-text">100%</div>
      </td>
      -->
    </tr>
  {{/each}}
</table>

<style>

  .table-item:hover .td-1 {
    color: white;
  }

  .td-1 {
    font-size: 35px;
    text-align: center;
    color: #757B7E;
    transition: 0.2s;
  }

</style>
